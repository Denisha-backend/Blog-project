
<%- include('./UserLayout/Header.ejs') %>
    <div class="container my-5">
        <div class="row">
            <!-- Sidebar: Categories -->
            <aside class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Categories</h5>
                    </div>
                    <div class="card-body">
                        <p class="category">
                            <a href="/"></a>
                            <a href="/" class="fs-4 d-flex text-decoration-none text-dark align-items-center">
                                <i class="ri-install-line me-2"></i>
                                All Category (<%= CategoryData.length %>)
                            </a>
                        </p>
                        <% CategoryData.map((v,i)=> { %>
                            <p class="category ms-5">
                                <a href="/?CatId=<%= v.id %>&sorting=<%= sortData %>"
                                    class="fs-5 d-flex text-decoration-none align-items-center">
                                    <i class="ri-newspaper-line me-3"></i>
                                    <%= v.category %> (<%= v.BlogIds.length %>)
                                </a>
                            </p>
                            <% }) %>
                    </div>
                </div>
            </aside>


            <!-- Main Content: Blogs -->
            <section class="col-md-9">
                <!-- Search and Sort Section -->
                <div class="d-flex justify-content-between mb-4">
                    <div class="d-flex w-50">
                        <form class="d-flex w-100">
                            <input type="search" value="<%= search %>" name="search" class="form-control me-2"
                                placeholder="Search Here..">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>
                        <a href="/" class="ms-2">
                            <button class="btn btn-secondary">Reset</button>
                        </a>
                    </div>
                    <div class="d-flex w-50 justify-content-end">
                        <form class="d-flex w-75">
                            <input type="hidden" name="CatId" value="<%= cateId %>" />
                            <select name="sorting" class="form-control me-2">
                                <option value="" selected>--Sort By--</option>
                                <option value="asc">Ascending</option>
                                <option value="desc">Descending</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Sort</button>
                        </form>
                    </div>
                </div>

                <!-- Blog Posts -->
                <div class="row">
                    <% BlogData.map((v,i)=>{ %>
                        <div class="col-md-4 mb-4">
                            <div class="card" style="height:400px;">
                                <img src="<%= v.image %>" class="card-img-top" height="250px" alt="Blog Image">
                                <div class="card-body">
                                    <h5 class="card-title px-2">
                                        <%= v.blogtitle.substring(0,70) %>
                                    </h5>
                                    <div class="d-flex justify-content-between">
                                        <a href="/singlePage/<%= v.id %>" class="btn btn-primary">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <!-- Pagination -->

            </section>
            <div class="d-flex justify-content-between mt-4">
                <a href="/?page=<%= parseInt(page) - 1 %>&search=<%= search %>" class="btn btn-primary">Prev</a>
                <div>
                    <% for(i=0;i<=page;i++){ %>
                        <a href="/?page=<%= i %>&search=<%= search %>" class="btn btn-outline-primary mx-1">
                            <%= i %>
                        </a>
                        <% } %>
                </div>
                <a href="/?page=<%= parseInt(page) + 1 %>&search=<%= search %>" class="btn btn-primary">Next</a>
            </div>
        </div>
    </div>
<%- include('./UserLayout/Footer.ejs') %>